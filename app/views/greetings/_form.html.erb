<div class="card">
  <div class="card-body">
    <h5 class="card-title">Send me a message!</h5>
    <%= bootstrap_form_with(model: greeting) do |form| %>
      <%= form.alert_message "Please fix the errors below.", error_summary: false %>
      <%= form.text_field :name %>
      <%= form.text_area :message %>
      <%= form.primary class: 'btn btn-outline-primary w-100' %>
    <% end %>
  </div>
</div>
